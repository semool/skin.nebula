<?xml version="1.0" encoding="UTF-8"?>
<window>
  <backgroundcolor>0</backgroundcolor>
  <defaultcontrol always="true">3012</defaultcontrol>
  <onload>Dialog.Close(fullscreeninfo,true)</onload>
  <onload>Dialog.Close(videoosd,true)</onload>
  <controls>
    <control type="group">
      <animation type="WindowOpen" reversible="false">
        <effect type="fade" start="0" end="100" time="400" />
        <effect type="slide" start="0,-181" end="0,0" time="400" />
      </animation>
      <animation type="WindowClose" reversible="false">
        <effect type="fade" start="100" end="0" time="400" />
        <effect type="slide" start="0,0" end="0,-181" time="400" />
      </animation>
      <control type="group">
        <posx>0</posx>
        <posy>0</posy>
        <height>350</height>
        <!-- Background -->
        <control type="image">
          <posx>0</posx>
          <posy>0</posy>
          <width>1920</width>
          <height>350</height>
          <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
          <texture flipy="true" border="1">$VAR[Theme.Color]/common/widget_gradient_tall.png</texture>
        </control>
        <control type="image">
          <posx>-200</posx>
          <posy>-5</posy>
          <width>2320</width>
          <height>183</height>
          <colordiffuse>$VAR[Picked.Theme.Color]</colordiffuse>
          <texture>$VAR[Theme.Color]/common/bg_dialog.png</texture>
        </control>
        <!-- Thumb -->
        <control type="group">
          <top>20</top>
          <left>60</left>
          <control type="image">
            <width>250</width>
            <height>141</height>
            <texture>$INFO[Window.Property(clearart)]</texture>
            <aspectratio>scale</aspectratio>
          </control>
          <control type="image">
            <width>250</width>
            <height>141</height>
            <texture>$INFO[Window.Property(landscape)]</texture>
            <aspectratio>scale</aspectratio>
          </control>
          <control type="image">
            <width>250</width>
            <height>141</height>
            <texture>$INFO[Window.Property(thumb)]</texture>
            <aspectratio>scale</aspectratio>
          </control>
        </control>
        <!-- Labels -->
        <control type="group">
          <top>20</top>
          <left>330</left>
          <right>20</right>
          <!-- Time -->
          <control type="label">
            <width>auto</width>
            <height>35</height>
            <aligny>center</aligny>
            <font>font12</font>
            <include>TextColor_MainColor</include>
            <label>$ADDON[service.upnext 30037] $INFO[Player.TimeRemaining(ss),,] $ADDON[service.upnext 30035]</label>
          </control>
          <!-- Details -->
          <control type="grouplist">
            <orientation>horizontal</orientation>
            <height>35</height>
            <top>40</top>
            <itemgap>0</itemgap>
            <control type="label">
              <width>auto</width>
              <height>35</height>
              <aligny>center</aligny>
              <font>font12</font>
              <include>TextColor_MainColor</include>
              <label>$INFO[Window.Property(tvshowtitle),, - ]$INFO[Window.Property(season),S,]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)]   </label>
              <visible>!String.IsEmpty(Window.Property(title))</visible>
            </control>
            <control type="label">
              <width>auto</width>
              <height>35</height>
              <aligny>center</aligny>
              <font>font12</font>
              <include>TextColor_MainColor</include>
              <label>$INFO[Window.Property(year),,   ]</label>
              <visible>!String.IsEmpty(Window.Property(year))</visible>
            </control>
            <control type="image">
              <width>33</width>
              <height>33</height>
              <aspect>keep</aspect>
              <texture>$VAR[Theme.Color]/badges/rating.png</texture>
              <visible>!String.IsEmpty(Window.Property(rating))</visible>
            </control>
            <control type="label">
              <width>auto</width>
              <height>35</height>
              <aligny>center</aligny>
              <label>$INFO[Window.Property(rating), ,   ]</label>
              <font>font12</font>
              <include>TextColor_MainColor</include>
              <visible>!String.IsEmpty(Window.Property(rating))</visible>
            </control>
          </control>
          <!-- Buttons -->
          <control type="grouplist">
            <top>85</top>
            <orientation>horizontal</orientation>
            <height>56</height>
            <bottom>20</bottom>
            <itemgap>5</itemgap>
            <control type="button" id="3012">
            <include>ButtonFocusAnimation</include>
              <label>$ADDON[service.upnext 30006]</label>
              <height>56</height>
              <width>300</width>
              <font>font12</font>
            </control>
            <control type="button" id="3013">
              <include>ButtonFocusAnimation</include>
              <label>$ADDON[service.upnext 30034]</label>
              <height>56</height>
              <width>300</width>
              <font>font12</font>
            </control>
          </control>
        </control>
      </control>
    </control>
  </controls>
</window>