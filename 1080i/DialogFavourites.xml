<?xml version="1.0" encoding="utf-8"?>
<window type="window">
    <defaultcontrol always="true">450</defaultcontrol>
    <controls>
        <include condition="!Skin.HasSetting(DisableFanart)">Fanart_Art</include>
        <include>Player_Show</include>
        <include>OverlayFull</include>
        <!-- <include>InfoBackground</include> -->
        <include condition="skin.HasSetting(rssTicker)">rssTicker</include>
        <control type="group">
            <include>OpenClose</include>
            <control type="group">
                <control type="image">
                    <posx>0</posx>
                    <posy>142</posy>
                    <width>1920</width>
                    <height>892</height>
                    <texture border="100">$VAR[Theme.Color]/common/bg_list.png</texture>
                </control>
                <control type="list" id="450">
                    <posx>0</posx>
                    <posy>183</posy>
                    <width>1920</width>
                    <height>810</height>
                    <orientation>vertical</orientation>
                    <onleft>450</onleft>
                    <onright>450</onright>
                    <onup>450</onup>
                    <ondown>450</ondown>
                    <preloaditems>2</preloaditems>
                    <pagecontrol>60</pagecontrol>
                    <include>BigList_Layout</include>
                </control>
                <control type="scrollbar" id="60">
                    <posx>1886</posx>
                    <posy>183</posy>
                    <height>810</height>
                    <include>VerticalScroller</include>
                    <onleft>53</onleft>
                    <onright>9000</onright>
                </control>
            </control>
        </control>
        <control type="label">
            <include>OpenClose</include>
            <include>WindowTitle</include>
            <label>$VAR[GlobalTitles]</label>
        </control>
        <control type="label">
            <include>OpenClose</include>
            <include>WindowTitleSub</include>
            <label>$INFO[Container(450).NumItems] $LOCALIZE[31025]</label>
        </control>
        <!-- <include>FooterInfo</include> -->
        <include>Time</include>
    </controls>
</window>
