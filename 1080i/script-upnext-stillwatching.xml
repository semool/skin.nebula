<?xml version="1.0" encoding="UTF-8"?>
<window>
  <backgroundcolor>0</backgroundcolor>
	<defaultcontrol always="true">3012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	<controls>
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="fade" start="0" end="100" time="400" />
				<effect type="slide" start="0,-181" end="0,0" time="400" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="400" />
				<effect type="slide" start="0,0" end="0,-181" time="400" />
			</animation>
			<control type="group">
				<height>181</height>
				<!-- Background -->
				<control type="image">
					<top>0</top>
					<width>100%</width>
					<height>181</height>
					<texture>$VAR[Theme.Color]/common/bg_dialog.png</texture>
				</control>
				<!-- Thumb -->
				<control type="group">
					<top>20</top>
					<left>60</left>
					<control type="image">
						<top>-2</top>
						<left>-2</left>
						<width>254</width>
						<height>144</height>
						<texture>shadow.png</texture>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture colordiffuse="FF12A0C7">white.jpg</texture>
						<visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
					<control type="textbox">
						<top>10</top>
						<left>60</left>
						<width>230</width>
						<height>121</height>
						<include>TextColor_MainColor</include>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(tvshowtitle)]</label>
						<visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$INFO[Window.Property(landscape)]</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$INFO[Window.Property(fanart)]</texture>
						<aspectratio>scale</aspectratio>
						<visible>String.IsEmpty(Window.Property(landscape))</visible>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$INFO[Window.Property(thumb)]</texture>
						<aspectratio>scale</aspectratio>
						<visible>String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
                    <control type="progress" id="3014">
                        <width>250</width>
                        <top>136</top>
                        <height>5</height>
                        <reveal>true</reveal>
                        <righttexture></righttexture>
                        <overlaytexture></overlaytexture>
                        <lefttexture></lefttexture>
                        <texturebg colordiffuse="00ffffff">$VAR[Theme.Color]/OSD/osd_progress_mini_empty.png</texturebg>
                        <midtexture colordiffuse="FFFF4081">$VAR[Theme.Color]/OSD/osd_progress_mini_mid.png</midtexture>
                    </control>
				</control>
				<!-- Labels -->
				<control type="group">
					<top>20</top>
					<left>330</left>
					<right>20</right>
					<!-- Time -->
					<control type="label">
						<width>auto</width>
						<height>35</height>
						<aligny>center</aligny>
						<font>font13_title</font>
						<include>TextColor_MainColor</include>
						<label>$ADDON[service.upnext 30008] $ADDON[service.upnext 30036] [COLOR FFFF4081]$INFO[Player.TimeRemaining(ss),,][/COLOR] $ADDON[service.upnext 30035]</label>
					</control>
					<!-- Details -->
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<height>35</height>
						<top>40</top>
						<itemgap>0</itemgap>
						<control type="label">
							<width>auto</width>
							<height>35</height>
							<aligny>center</aligny>
							<font>font12</font>
							<include>TextColor_MainColor</include>
							<label>$INFO[Window.Property(tvshowtitle),, - ]$INFO[Window.Property(season),S,]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)]   </label>
							<visible>!String.IsEmpty(Window.Property(title))</visible>
						</control>
						<control type="label">
							<width>auto</width>
							<height>35</height>
							<aligny>center</aligny>
							<font>font12</font>
							<include>TextColor_MainColor</include>
							<label>$INFO[Window.Property(year),,   ]</label>
							<visible>!String.IsEmpty(Window.Property(year))</visible>
						</control>
						<control type="image">
							<width>33</width>
							<height>33</height>
							<aspect>keep</aspect>
							<texture>$VAR[Theme.Color]/badges/rating.png</texture>
							<visible>!String.IsEmpty(Window.Property(rating))</visible>
						</control>
						<control type="label">
							<width>auto</width>
							<height>35</height>
							<aligny>center</aligny>
							<label>$INFO[Window.Property(rating), ,   ]</label>
							<font>font12</font>
							<include>TextColor_MainColor</include>
							<visible>!String.IsEmpty(Window.Property(rating))</visible>
						</control>
					</control>
               	<!-- Buttons -->
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<height>56</height>
						<bottom>20</bottom>
						<itemgap>5</itemgap>
						<control type="button" id="3012">
						<include>ButtonFocusAnimation</include>
							<label>$ADDON[service.upnext 30010] $ADDON[service.upnext 30036] [COLOR FFFF4081]$INFO[Player.TimeRemaining(ss),,][/COLOR] $ADDON[service.upnext 30035]</label>
							<height>56</height>
							<width>350</width>
							<font>font12</font>
						</control>
						<control type="button" id="3013">
						  <include>ButtonFocusAnimation</include>
							 <label>$ADDON[service.upnext 30034]</label>
							<height>56</height>
							<width>170</width>
							<font>font12</font>
						</control>
					</control>
					<control type="image">
						<bottom>20</bottom>
						<width>46</width>
						<height>46</height>
						<aspect>keep</aspect>
						<texture colordiffuse="ddffffff">nextupicons/00.png</texture>
						<animation effect="slide" end="13,-5" time="0" condition="true">Conditional</animation>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>