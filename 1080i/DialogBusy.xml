<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <onload condition="String.Contains(Player.Filenameandpath,theme.mp3)">Dialog.Close(all,true)</onload>
    <onload condition="String.Contains(Player.Filenameandpath,stream.mp3)">Dialog.Close(all,true)</onload>
    <controls>
        <control type="group">
            <include>DialogOpenClose</include>
            <include content="ProgressBar">
                <param name="id" value="10"/>
                <param name="visible" value="true"/>
                <param name="x" value="0"/>
                <param name="y" value="0"/>
                <param name="width" value="1920"/>
                <param name="height" value="14"/>
                <param name="texturebg" value="OSD/osd_progress_background.png"/>
                <param name="gfx" value="OSD/osd_progress_mid.png"/>
                <param name="border" value="1,1,5,1"/>
                <param name="borderbg" value="1,1,1,1"/>
                <param name="info" value="noop"/>
            </include>
            <control type="image" id="1">
                <visible>Integer.IsGreater(Control.GetLabel(10), 0)</visible>
                <posx>810</posx>
                <posy>390</posy>
                <width>300</width>
                <height>300</height>
                <texture>$VAR[Theme.Color]/OSD/loading_inner.png</texture>
            </control>
            <control type="image" id="1">
                <posx>810</posx>
                <posy>390</posy>
                <width>300</width>
                <height>300</height>
                <texture>$VAR[Theme.Color]/OSD/loading.png</texture>
                <animation effect="rotate" center="auto" start="360" end="0" time="1500" loop="true" condition="true">Conditional</animation>
            </control>
            <control type="label" id="1">
                <visible>Integer.IsGreater(Control.GetLabel(10), 0)</visible>
                <posx>0</posx>
                <posy>0</posy>
                <height>1080</height>
                <width>1920</width>
                <align>center</align>
                <font>OSDTitleFont</font>
                <include>TextColor_MainColor</include>
                <label>$INFO[Player.CacheLevel, ,%]</label>
            </control>
        </control>
    </controls>
</window>
